{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "paths": {
      "@/core/*": ["src/core/*"],
      "@/lib/*": ["src/lib/*"],
      "@/styles/*": ["src/common/styles/*"],
      "@/icons/*": ["public/icons/*"],
      "@/components/*": ["src/common/components/*"],
      "@/pages/*": ["src/pages/*"],
      "@/images/*": ["public/images/*"],
      "@/features/*": ["src/common/features/*"]
    }
  },
  "exclude": ["node_modules", ".next"],
  "include": ["./node_modules/cypress", "cypress/**/*.js"]
}
